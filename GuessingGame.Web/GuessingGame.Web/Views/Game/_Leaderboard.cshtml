@model List<GuessingGame.Web.Models.Player>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Top 5 Jugadores</h4>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Jugador</th>
                            <th>Intentos</th>
                            <th>Tiempo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model)
                        {
                            <tr>
                                <td>@player.PlayerName</td>
                                <td>@player.GuessCount</td>
                                <td>@player.TimeTaken.ToString("F1") seg</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center mb-0">No hay registros aún.</p>
        }
    </div>
</div>